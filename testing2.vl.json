{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/MALB008/Visualisation2/refs/heads/main/commodityValue.csv"
    },
    "config": {
      "axis": {
        "labelFontSize": 17,
        "titleFontSize": 18,
        "labelFont": "serif",
        "titleFont": "serif"
      },
      "legend": {
        "labelFontSize": 12,
        "titleFontSize": 14,
        "labelFont": "serif",
        "titleFont": "serif"
  
      },
      "view": {
        "stroke": ""
      }
    },

    "width": 400,
    "height": 400,
    "transform": [
      {"filter": "datum.Category == 'Slaughtered Animals'"}
    
  
      ],
      "encoding": {"x": {"field": "Year", "type": "quantitative", "axis": {
        "title": "Year",
        "format": "d"  
      }}},    "layer": [
      {
        "encoding": {
          "color": {"field": "Commodity", "type": "nominal", "title": "Animal", 
          "scale":{
            "scheme": "dark2"
          }},
          "y": {"field": "Value", "type": "quantitative",
          "title": "Production Value (in Millions of $)"
        }
        },
        "layer": [
          {"mark": "line"},
          {
            "transform": [
              {"filter": {"param": "hover", "empty": false}},
              {"filter": "datum.Category == 'Fruits and Vegetables'"}
            ],
            "mark": "point"
  
            
          }
        ]
      },
      {
        "transform": [
          {"pivot": "Commodity", "value": "Value", "groupby": ["Year"]}
        ],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
  
                
         "tooltip":[
                {"field": "Cattle slaughtered", "type": "quantitative","format":",.2f"},
                {"field": "Goats slaughtered", "type": "quantitative","format":",.2f"},
                {"field": "Lambs slaughtered", "type": "quantitative","format":",.2f"},
                {"field": "Lambs slaughtered", "type": "quantitative","format":",.2f"},
                {"field": "Pigs slaughtered", "type": "quantitative","format":",.2f"},
                {"field": "Poultry slaughtered", "type": "quantitative","format":",.2f"},
                {"field": "Sheep slaughtered", "type": "quantitative","format":",.2f"},
                {"field": "Other livestock slaughterings", "type": "quantitative","format":",.2f"}
  
              ]
  
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["Year"],
              "nearest": true,
              "on": "pointerover",
              "clear": "pointerout"
            }
          }
        ]
      }
    ]
  }