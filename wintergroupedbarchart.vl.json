{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 350,
    "data": {
      "url": "https://raw.githubusercontent.com/MALB008/Visualisation2/refs/heads/main/wintercropdataproccessed.csv",
      "format": {
        "type": "csv"
      }
    },
    "config": {
      "axis": {
        "labelFontSize": 17,
        "titleFontSize": 18,
        "labelFont": "san-serif",
        "titleFont": "serif",
        "grid": false
      },
      "legend": {
        "labelFontSize": 17,
        "titleFontSize": 18,
        "labelFont": "serif",
        "titleFont": "serif"
      },
      "view": {
        "stroke": null  
      }
    },
    "transform": [
      {
        "filter": "datum.Year == 2024"
      },
      {
        "filter": "(datum.Category === 'Wheat' || datum.Category === 'Canola' || datum.Category === 'Barley' || datum.Category === 'Chickpeas' || datum.Category === 'Faba beans' || datum.Category === 'Field peas' || datum.Category === 'Lentils' || datum.Category === 'Lupins' || datum.Category === 'Triticale' || datum.Category === 'Oats')"
      },
  {
        "calculate": "datum.value /100",
        "as": "hectares"
      }
  
    ],
    "mark":  {
        "type": "bar",
        "size": 30  
      },
    "encoding": {
      "x": {"field": "Category", "type": "nominal", "title": "Winter Crops", 
      "axis": {
          "grid": false  
        }},
      "y": {"field": "hectares", "type": "quantitative", "title": "Hectares (Millions)"},
  
     "color": {
        "condition": {
          "test": "datum.value === '13010.3'",
          "value": "#DC267F"
        },
        "value": "#3456AE"
      }
      , 
      "tooltip": [
        {"field": "Category", "type": "nominal"},
        {"field": "hectares", "type": "quantitative", "title": "Hectares", "format": ".2f" }
  
      ]
        }
  }
  