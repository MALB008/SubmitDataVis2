{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "axis": {
      "labelFontSize": 17,
      "titleFontSize": 18,
      "labelFont": "serif",
      "titleFont": "serif"
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "labelFont": "serif",
      "titleFont": "serif"
        },
    "view": {"stroke": ""}
  },
  "width": "container",
  "height": "container",
  "params": [
    {
      "name": "Item_selection",
      "value": "Maize",
      "bind": {
        "input": "select",
        "options": [
          "Maize",
          "Potatoes",
          "Soybeans",
          "Wheat",
          "Rice, paddy",
          "Sorghum",
          "Cassava",
          "Sweet potatoes",
          "Plantains and others",
          "Yams"
        ],
        "labels": [
          "Maize",
          "Potatoes",
          "Soybeans",
          "Wheat",
          "Rice, paddy",
          "Sorghum",
          "Cassava",
          "Sweet potatoes",
          "Plantains and others",
          "Yams"
        ],
        "name": "Crops: "
      }
    }
  ],

      "width": "container",
      "height": 430,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/MALB008/Visualisation2/refs/heads/main/worldmap_graticules_boundingbox.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "#ddd",
            "stroke": "white",
            "strokeWidth": 1
          },
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        }
        ,
        {
          "data": {
            "url": "https://raw.githubusercontent.com/MALB008/Visualisation2/refs/heads/main/yield_2013.csv"
          },
          "transform": [
            {
              "lookup": "Area",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/MALB008/Visualisation2/refs/heads/main/worldmap_graticules_boundingbox.json",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {"calculate": "'hg/ha_yield'", "as": "hectograms per hectare"},
            {"filter": "datum.Item == Item_selection"}
          ],
          "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "hg/ha_yield",
              "type": "quantitative",
              "scale": {"scheme": "blues"},
              "legend": {"format": ".2s"},
              "title": "hg/ha"
            },
            "tooltip": [
              {"field": "Area", "type": "nominal", "title": "Country"},
              {
                "field": "avg_temp",
                "type": "quantitative",
                "title": "Average Temperature (Â°C)",
                "format": ",.2f"
              },
              {
                "field": "average_rain_fall_mm_per_year",
                "type": "quantitative",
                "title": "Average Rainfall (mm/year)",
                "format": ",.2f"
              }
            ]
          }
        }
      ]
        
  
}