{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "axis": {
      "labelFontSize": 17,
      "titleFontSize": 18,
      "labelFont": "serif",
      "titleFont": "serif"
    },
    "legend": {
      "labelFontSize": 17,
      "titleFontSize": 18,
      "labelFont": "serif",
      "titleFont": "serif"

    },
    "view": {
      "stroke": ""
    }
  },
  "width": 350,
  "height": "container",
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2024,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/MALB008/Visualisation2/refs/heads/main/FinalSlaughterLivestock.csv"
  },
  "transform": [
    {
      "calculate": "{'Cow': 'üêÑ', 'Sheep': 'üêè', 'Pig': 'üêñ', 'Bull': 'üêÇ'}[datum.Animal]",
      "as": "emoji"
    },
    {
      "filter": "datum.index == Year_selection"
    }
  ],
  "mark": {
    "type": "text",
    "baseline": "middle"
  },
  "encoding": {
    "x": {
      "field": "Rank",
      "type": "quantitative",
      "axis": {
        "grid": false,
        "domain": [1, 10] 
      },
      "title": "Number Slaughtered Per Million"
    },
    "y": {
      "field": "Animal",
      "type": "nominal",
      "sort": null,
      "title": "Livestock"
    },

    "text": {
      "field": "emoji",
      "type": "nominal"
    },
    "size": {
      "value": 30
    },
    "tooltip": [
      {"field": "Animal", "type": "nominal"}

    ]
  }
}